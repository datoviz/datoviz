_DVZ_UNAME="$(uname)"

if [[ "${_DVZ_UNAME}" == "Darwin" ]]; then
    # Configure Vulkan SDK environment for Datoviz.
    if [ -f "./tools/vulkan-env.sh" ]; then
        source ./tools/vulkan-env.sh
    fi
elif [[ "${_DVZ_UNAME}" == "Linux" ]]; then
    export VK_LAYER_SETTINGS_PATH="${HOME}/.vulkan_layers"
    # Configure Vulkan SDK environment for Datoviz.
    if [ -f "./tools/vulkan-env.sh" ]; then
        source ./tools/vulkan-env.sh
    fi
fi

unset _DVZ_UNAME
